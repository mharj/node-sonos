{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": ["./**/*.js", "node_modules/**/*.ts"],
    "include": ["test/*.ts"]
  },
  "rules": {
    "max-line-length": [false],
    "quotemark": [true, "double", "avoid-escape", "avoid-template"],
    "no-console": [false],
    "no-empty": [false]
  }
}
